<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_player" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_player"
        android:layout_below="@+id/label_player"
        android:src="@drawable/dado"/>

    <TextView
        android:text="Computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/computer"
        android:layout_below="@+id/image_player"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_computer"
        android:layout_below="@+id/computer"
        android:src="@drawable/dado" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Jogar"
        android:id="@+id/button"
        android:layout_below="@+id/image_computer"
        android:onClick="play"/>

</RelativeLayout>
